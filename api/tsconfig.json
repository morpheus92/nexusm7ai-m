{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      // 明确指定 @alipay/mcp-server-alipay 模块的类型声明文件路径
      "@alipay/mcp-server-alipay": ["./types/alipay.d.ts"]
    },
    "typeRoots": ["./types", "../node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}